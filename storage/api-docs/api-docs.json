{
    "openapi": "3.0.0",
    "info": {
        "title": "API BASE",
        "description": "Servicio API REST para la gestión y administración del sistema Automatizado de riego por goteo",
        "contact": {
            "name": "SETI",
            "email": "cirojas@cenicana.org"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/v1/estates": {
            "get": {
                "tags": [
                    "Estates"
                ],
                "summary": "Get list of estates",
                "description": "Returns list of estates",
                "operationId": "getEstatesList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EntityJsonResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        },
        "/v1/estates/{id}": {
            "get": {
                "tags": [
                    "Estates"
                ],
                "summary": "Get estate information",
                "description": "Returns estate data",
                "operationId": "getEstateById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Estate id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EntityJsonResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Login",
                "description": "Genera el token de autenticación",
                "operationId": "login",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-Mail",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Contraseña",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "password"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "El login se realizó correctamente "
                    },
                    "400": {
                        "description": "Petición no valida"
                    },
                    "401": {
                        "description": "Usuario no autorizado"
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Logout",
                "description": "Invalida el token",
                "operationId": "logout",
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "El login se realizó correctamente "
                    },
                    "400": {
                        "description": "Petición no valida"
                    },
                    "401": {
                        "description": "Usuario no autorizado"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        },
        "/auth/refresh": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Refresca el token de autenticación",
                "description": "Invalida el token actual y genera uno nuevo",
                "operationId": "refresh",
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "El login se realizó correctamente "
                    },
                    "400": {
                        "description": "Petición no valida"
                    },
                    "401": {
                        "description": "Usuario no autorizado"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        },
        "/auth/me": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Obtiene la información del usuaro autenticado",
                "description": "Obtiene la información del usuaro autenticado",
                "operationId": "me",
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "El login se realizó correctamente "
                    },
                    "400": {
                        "description": "Petición no valida"
                    },
                    "401": {
                        "description": "Usuario no autorizado"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        },
        "/v1/water-sources": {
            "get": {
                "tags": [
                    "WaterSources"
                ],
                "summary": "Get list of water sources",
                "description": "Returns list of water sources",
                "operationId": "getWaterSourceList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EntityJsonResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "WaterSources"
                ],
                "summary": "Store new water source",
                "description": "Returns water source data",
                "operationId": "storeWaterSource",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/WaterSource"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/WaterSource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/v1/water-sources/{id}": {
            "get": {
                "tags": [
                    "WaterSources"
                ],
                "summary": "Get water source information",
                "description": "Returns water source data",
                "operationId": "getWaterSourcesById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Water source id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EntityJsonResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "jwt_key": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "WaterSource": {
                "title": "Water model",
                "description": "WaterSource model",
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "Name of the Water Source",
                        "type": "string",
                        "example": "Rio Cauca"
                    },
                    "capacity": {
                        "title": "Capacity",
                        "description": "Capacity of the Water Source / M3 para Reservorio , Rio and Pozo M3/h",
                        "type": "number",
                        "format": "float",
                        "example": "100.0"
                    },
                    "uptake_time": {
                        "title": "UptakeTime",
                        "description": "Uptake Timeof the Water Source in hours",
                        "type": "integer",
                        "format": "int64",
                        "example": "100.0"
                    },
                    "type_id": {
                        "title": "TypeId",
                        "description": "The ID of the water source Type: (Rio, Pozo, Reservorio)",
                        "type": "integer",
                        "format": "int64",
                        "example": "1"
                    },
                    "estate_id": {
                        "title": "EstateId",
                        "description": "The ID of the estate where belongs the water source",
                        "type": "integer",
                        "format": "int64",
                        "example": "1"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "WaterSource"
                }
            },
            "EntityJsonResource": {
                "title": "EntityJsonResource",
                "description": "A Json wrapper resource",
                "properties": {
                    "data": {
                        "title": "Data",
                        "description": "Data wrapper",
                        "type": "array",
                        "items": {
                            "ref": null
                        }
                    }
                },
                "type": "object",
                "xml": {
                    "name": "EntityJsonResource"
                }
            }
        },
        "securitySchemes": {
            "jwt_key": {
                "type": "apiKey",
                "description": "Debe insertar el token generado en el proceso de autenticación",
                "name": "Authorization",
                "in": "header",
                "template": "Bearer {}"
            }
        }
    },
    "tags": [
        {
            "name": "Autenticación",
            "description": "Operaciones para el proceso de autenticación"
        }
    ]
}